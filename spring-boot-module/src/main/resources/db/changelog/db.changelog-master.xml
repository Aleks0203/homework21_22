<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="druk_aleksandr@mail.ru">
        <createTable tableName="Item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="description" type="varchar(40)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="druk_aleksandr@mail.ru">
        <createTable tableName="ItemDetails">
            <column name="item_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" foreignKeyName="item_id" referencedTableName="Item"
                             referencedColumnNames="id"/>
            </column>
            <column name="price" type="varchar(40)"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="druk_aleksandr@mail.ru">
        <createTable tableName="Shop">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="location" type="varchar(40)"/>
        </createTable>
    </changeSet>

    <changeSet id="4" author="druk_aleksandr@mail.ru">
        <createTable tableName="Item_Shop">
            <column name="items_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="items_id" referencedTableName="Item"
                             referencedColumnNames="id"/>
            </column>
            <column name="shops_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="shops_id" referencedTableName="Shop"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>